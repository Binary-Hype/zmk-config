#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/ext_power.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/rgb.h>
#include "keys_german.h"

#define BASE 0
#define LOWER 1
#define RAISE 2
#define ADJUST 3

/ {
    // Activate ADJUST layer by pressing raise and lower

    conditional_layers {
        compatible = "zmk,conditional-layers";

        adjust_layer {
            if-layers = <LOWER RAISE>;
            then-layer = <ADJUST>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            display-name = "default";

            // ------------------------------------------------------------------------------------------------------------
            // |  ESC  |  1  |  2   |  3   |  4   |  5   |                   |  6   |  7    |  8    |  9   |   0   |   ÃŸ   |
            // |  ^    |  Q  |  W   |  E   |  R   |  T   |                   |  Z   |  U    |  I    |  O   |   P   | BKSPC |
            // |  TAB  |  A  |  S   |  D   |  F   |  G   |                   |  H   |  J    |  K    |  L   |       | DELETE|
            // | SHIFT |  Y  |  X   |  C   |  V   |  B   |  MUTE  |  | PLAY  |  N   |  M    |  ,    |  .   |   -   | SHIFT |
            //               | CTRL | ALT  | GUI  |RAISE |  SPACE |  | ENTER | LOWER| GUI   | ALT   | CTRL |

            bindings = <
&kp ESCAPE  &kp DE_1  &kp DE_2     &kp DE_3    &kp DE_4    &kp DE_5                                      &kp DE_6      &kp DE_7          &kp DE_8      &kp DE_9      &kp DE_0     &kp DE_SS
&kp CARET   &kp DE_Q  &kp DE_W     &kp DE_E    &kp DE_R    &kp DE_T                                      &kp DE_Z      &kp DE_U          &kp DE_I      &kp DE_O      &kp P        &kp BSPC
&kp TAB     &kp DE_A  &kp DE_S     &kp DE_D    &kp DE_F    &kp DE_G                                      &kp DE_H      &kp DE_J          &kp DE_K      &kp DE_L      &none        &kp DELETE
&kp LSHFT   &kp DE_Y  &kp DE_X     &kp DE_C    &kp DE_V    &kp DE_B  &kp C_MUTE        &kp C_PLAY_PAUSE  &kp DE_N      &kp DE_M          &kp DE_COMM   &kp DE_DOT    &kp DE_MINS  &kp RSHFT
                      &kp LCTRL    &kp LALT    &kp LGUI    &mo 2     &kp SPACE         &kp SPACE         &mo 1         &kp RIGHT_GUI     &kp RALT      &kp RCTRL
            >;

            sensor-bindings =
                <&inc_dec_kp C_VOL_UP C_VOL_DN>,
                <&inc_dec_kp C_PREV C_NEXT>;
        };

        raise_layer {
            display-name = "raise";

            // ------------------------------------------------------------------------------------------------------------
            // |  F1   |  F2  |  F3  |  F4  |  F5  |  F6  |                   |  F7  |  F8   |  F9   | F10  |  F11  |  F12  |
            // |   -   |  -   |  -   |  -   |  -   |  -   |                   |  -   |  -    |  UP   |  -   |   -   | BKSPC |
            // |  TAB  |  -   |  -   |  -   |  -   |  -   |                   |  -   |  LEFT |  DOWN |RIGHT |   -   | DELETE|
            // | SHIFT |  -   |  -   |  -   |  -   |  -   |  MUTE  |  | PLAY  |  -   |  -    |  -    |  -   |   -   | SHIFT |
            //                | CTRL | ALT  | GUI  |RAISE |  SPACE |  | ENTER | LOWER| GUI   | ALT   | CTRL |

            bindings = <
&kp F1      &kp F2      &kp F3            &kp F4         &kp F5            &kp F6                                     &kp F7            &kp F8             &kp F9                &kp F10                &kp F11        &kp F12
&none       &none       &none             &none          &none             &none                                      &none             &none              &kp UP                &none                  &none          &kp BSPC
&kp TAB     &none       &none             &none          &none             &none                                      &none             &kp LEFT           &kp DOWN              &kp RIGHT              &none          &kp DELETE
&kp LSHFT   &none       &none             &none          &none             &none          &kp C_MUTE    &kp C_PP      &none             &none              &none                 &none                  &none          &kp RSHFT
                        &kp LCTRL         &kp LALT       &kp LGUI          &mo RAISE      &kp SPACE     &kp RET       &mo LOWER         &kp RGUI           &kp RALT              &kp RCTRL
            >;


            sensor-bindings =
                <&inc_dec_kp C_VOL_UP C_VOL_DN>,
                <&inc_dec_kp C_PREV C_NEXT>;
        };

        lower_layer {
            display-name = "lower";

            // ------------------------------------------------------------------------------------------------------------
            // |   -   |  -  |  -   |  -   |  -   |  -   |                   |  -   |  -    |  -    |  -   |   -   |   -   |
            // |   -   |  -  |  -   |  -   |  -   |  -   |                   |  -   |  -    |  -    |  -   |   -   |   -   |
            // |   -   |  -  |  -   |  -   |  -   |  -   |                   |  -   |  -    |  -    |  -   |   -   |   -   |
            // |   -   |  -  |  -   |  -   |  -   |  -   |  MUTE  |  | PLAY  |  -   |  -    |  -    |  -   |   -   |   -   |
            //               | CTRL | ALT  | GUI  |RAISE |  SPACE |  | ENTER | LOWER| GUI   | ALT   | CTRL |

            bindings = <
&bt BT_CLR  &bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3      &bt BT_SEL 4                          &trans     &trans             &trans         &trans         &trans   &trans
&trans      &kp INS       &kp PSCRN     &kp K_CMENU   &trans            &trans                                &kp PG_UP  &trans             &kp UP         &trans         &trans   &trans
&trans      &kp LALT      &kp LCTRL     &kp LSHFT     &trans            &kp CLCK                              &kp PG_DN  &kp LEFT           &kp DOWN       &kp RIGHT      &kp DEL  &kp BSPC
&trans      &kp K_UNDO    &kp K_CUT     &kp K_COPY    &kp K_PASTE       &trans        &trans       &trans     &trans     &trans             &trans         &trans         &trans   &trans
                          &kp LEFT_GUI  &kp LEFT_ALT  &kp LEFT_CONTROL  &mo 1         &kp SPACE    &kp ENTER  &mo 2      &kp RIGHT_CONTROL  &kp RIGHT_ALT  &kp RIGHT_GUI
            >;

            sensor-bindings =
                <&inc_dec_kp C_VOL_UP C_VOL_DN>,
                <&inc_dec_kp C_PREV C_NEXT>;
        };

        adjust_layer {
            // ------------------------------------------------------------------------------------------------------------
            // |   -   |  -  |  -   |  -   |  -   |  -   |                   |  -   |  -    |  -    |  -   |   -   |   -   |
            // |   -   |  -  |  -   |  -   |  -   |  -   |                   |  -   |  -    |  -    |  -   |   -   |   -   |
            // |   -   |  -  |  -   |  -   |  -   |  -   |                   |  -   |  -    |  -    |  -   |   -   |   -   |
            // |   -   |  -  |  -   |  -   |  -   |  -   |  MUTE  |  | PLAY  |  -   |  -    |  -    |  -   |   -   |   -   |
            //               | CTRL | ALT  | GUI  |RAISE |  SPACE |  | ENTER | LOWER| GUI   | ALT   | CTRL |

            display-name = "adjust";
            bindings = <
&bt BT_CLR         &bt BT_SEL 0     &bt BT_SEL 1     &bt BT_SEL 2     &bt BT_SEL 3      &bt BT_SEL 4                                   &none  &none              &none          &none          &none  &none
&ext_power EP_TOG  &rgb_ug RGB_HUD  &rgb_ug RGB_HUI  &rgb_ug RGB_SAD  &rgb_ug RGB_SAI   &rgb_ug RGB_EFF                                &none  &none              &none          &none          &none  &none
&none              &rgb_ug RGB_BRD  &rgb_ug RGB_BRI  &none            &none             &none                                          &none  &none              &none          &none          &none  &none
&none              &none            &none            &none            &none             &none            &rgb_ug RGB_TOG    &none      &none  &none              &none          &none          &none  &none
                                    &kp LEFT_GUI     &kp LEFT_ALT     &kp LEFT_CONTROL  &mo 1            &kp ENTER          &kp ENTER  &mo 2  &kp RIGHT_CONTROL  &kp RIGHT_ALT  &kp RIGHT_GUI
            >;
        };
    };
};
